<?xml version="1.0" encoding="UTF-8" ?>
<Flow xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>64.0</apiVersion>
    <areMetricsLoggedToDataCloud>false</areMetricsLoggedToDataCloud>
    <description>Updates the instance of an event</description>
    <environments>Default</environments>
    <interviewLabel>Update Event {!$Flow.CurrentDateTime}</interviewLabel>
    <label>Update Event Instance</label>
    <processMetadataValues>
        <name>BuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>CanvasMode</name>
        <value>
            <stringValue>AUTO_LAYOUT_CANVAS</stringValue>
        </value>
    </processMetadataValues>
    <processMetadataValues>
        <name>OriginBuilderType</name>
        <value>
            <stringValue>LightningFlowBuilder</stringValue>
        </value>
    </processMetadataValues>
    <processType>AutoLaunchedFlow</processType>
    <recordUpdates>
        <description>Agent updates instance record status</description>
        <name>Agent_Update_Instance</name>
        <label>Agent Update Instance</label>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <filterLogic>and</filterLogic>
        <filters>
            <field>Id</field>
            <operator>EqualTo</operator>
            <value>
                <elementReference>InstanceRecordId</elementReference>
            </value>
        </filters>
        <inputAssignments>
            <field>summit__Active_Status__c</field>
            <value>
                <elementReference>Updated_Status</elementReference>
            </value>
        </inputAssignments>
        <object>summit__Summit_Events_Instance__c</object>
    </recordUpdates>
    <start>
        <locationX>0</locationX>
        <locationY>0</locationY>
        <connector>
            <targetReference>Agent_Update_Instance</targetReference>
        </connector>
    </start>
    <status>Active</status>
    <variables>
        <description>ID of the Instance to update</description>
        <name>InstanceID</name>
        <dataType>SObject</dataType>
        <isCollection>false</isCollection>
        <isInput>false</isInput>
        <isOutput>true</isOutput>
        <objectType>summit__Summit_Events_Instance__c</objectType>
    </variables>
    <variables>
        <description>ID of the Instance to update</description>
        <name>InstanceRecordId</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
    </variables>
    <variables>
        <description>The updated status of the event</description>
        <name>Updated_Status</name>
        <dataType>String</dataType>
        <isCollection>false</isCollection>
        <isInput>true</isInput>
        <isOutput>false</isOutput>
    </variables>
</Flow>
